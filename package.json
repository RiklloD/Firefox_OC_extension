{
  "name": "opencode-browser-agent",
  "version": "1.0.0",
  "description": "OpenCode plugin for browser automation and context injection - works with Firefox extension",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./plugin/browser-context.js",
      "types": "./plugin/browser-context.d.ts"
    },
    "./mcp-server": {
      "import": "./mcp-servers/playwright/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "install": "node bin/install.js",
    "prepublish": "bun run build"
  },
  "keywords": [
    "opencode",
    "browser",
    "automation",
    "firefox",
    "extension",
    "mcp",
    "playwright"
  ],
  "author": "Rikllo",
  "license": "MIT",
  "repository": "github:code-yeongyu/opencode-browser-agent",
  "bugs": {
    "url": "https://github.com/code-yeongyu/opencode-browser-agent/issues"
  },
  "homepage": "https://github.com/code-yeongyu/opencode-browser-agent#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0",
    "@opencode-ai/sdk": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
