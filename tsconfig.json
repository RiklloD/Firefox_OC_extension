{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@opencode-ai/plugin": ["./node_modules/@opencode-ai/plugin"],
      "@opencode-ai/sdk": ["./node_modules/@opencode-ai/sdk"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
